{
  "trailingComma": "none",
  "singleQuote": true,
  "printWidth": 120,
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": ["*.cls", "*.trigger"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    }
  ]
}
